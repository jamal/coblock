FIND_PATH(CHIPMUNK_INCLUDE_DIR chipmunk)

FIND_LIBRARY(CHIPMUNK_LIBRARY NAMES chipmunk)
IF(NOT CHIPMUNK_LIBRARY)
    MESSAGE(SEND_ERROR "Chipmunk not found")
ENDIF(NOT CHIPMUNK_LIBRARY)

IF(CHIPMUNK_INCLUDE_DIR AND CHIPMUNK_LIBRARY)
   SET(CHIPMUNK_FOUND TRUE)
ENDIF(CHIPMUNK_INCLUDE_DIR AND CHIPMUNK_LIBRARY)

IF(CHIPMUNK_FOUND)
   IF (NOT Chipmunk_FIND_QUIETLY)
      MESSAGE(STATUS "Found Chipmunk: ${CHIPMUNK_LIBRARY}")
   ENDIF (NOT Chipmunk_FIND_QUIETLY)
ELSE(CHIPMUNK_FOUND)
   IF (Chipmunk_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find Chipmunk")
   ENDIF (Chipmunk_FIND_REQUIRED)
ENDIF(CHIPMUNK_FOUND)
